---
layout: base
---

<article class="single-article{% if poem%} poem{% endif %} border-bottom border-secondary-subtle mb-4 pb-3">

  {% include "partials/post/image.njk" %}

  <header>
    {% if subtitle %}
      <h1>{{ title }}</h1>
      {% include "partials/post/top-meta.njk" %}
      <p class="subtitle">{{ subtitle }}</p>
    {% else %}
      {% include "partials/post/top-meta.njk" %}
      <h1>{{ title }}</h1>
    {% endif %}
  </header>
  {% include "disclaimers/disclaimer.njk" %}
  {{ content | safe }}
</article>

{% include "partials/post/bottom-meta.njk" %}
{% include "partials/post/navigation.njk" %}
{% include "partials/scroll-up-arrow.njk" %}

