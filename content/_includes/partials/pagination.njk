{% if totalPages > 1 %}
  <nav aria-label="Page navigation">
    <ul class="pagination pagination-sm">
      {%- if currentPage > 2 -%}
        <li class="page-item">
          <a class="page-link" href="{{ firstHref }}">
            {% icon 'left-to-line', 'class'='bi' %}
            <span class="sr-only" hidden>Newest articles</span>
          </a>
        </li>
      {%- else -%}
        <li class="page-item disabled">
          <span class="page-link">{% icon 'left-to-line', 'class'='bi' %}</span>
        </li>
      {%- endif -%}
      {%- if currentPage > 1 -%}
        <li class="page-item">
          <a class="page-link" href="{{ previousHref }}">
            {% icon 'left',
            'class' = 'bi' %}
            <span class="sr-only" hidden>Newer articles</span>
          </a>
        </li>
      {%- else -%}
        <li class="page-item disabled">
          <span class="page-link">{% icon 'left',
            'class' = 'bi' %}</span>
        </li>
      {%- endif -%}

      <li class="page-item">
        <span class="page-link">Page {{ currentPage }} of {{ totalPages }}</span>
      </li>

      {%- if currentPage < totalPages -%}
        <li class="page-item">
          <a class="page-link" href="{{ nextHref }}">
            <span class="sr-only" hidden>Older articles</span>
            {% icon 'right',
            'class' = 'bi' %}
          </a>
        </li>
      {%- else -%}
        <li class="page-item disabled">
          <span class="page-link">{% icon 'right',
            'class' = 'bi' %}</span>
        </li>
      {%- endif -%}

      {%- if currentPage < totalPages - 1 -%}
        <li class="page-item">
          <a class="page-link" href="{{ lastHref }}">
            <span class="sr-only" hidden>Oldest articles</span>
            {% icon 'right-to-line', 'class'='bi' %}
          </a>
        </li>
      {% else %}
        <li class="page-item disabled">
          <span class="page-link">{% icon 'right-to-line', 'class'='bi' %}</span>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
