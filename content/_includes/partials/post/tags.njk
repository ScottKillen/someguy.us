{% if siteConfig.tags.displayOnPostPage %}
<div class="post-tags">
{% if tags|filterExcludedTags %}
  <p>Tagged as:</p>
  <ul>
  {% for tag in tags|filterExcludedTags %}
    <li>
      <a title="Articles tagged as '{{ tag }}'" href="/{{ siteConfig.tags.pageUrlPrefix }}/{{ tag|slugify }}/">{{ tag }}</a>
    </li>
  {% endfor %}
  </ul>
{% endif %}
</div>
{% endif %}
