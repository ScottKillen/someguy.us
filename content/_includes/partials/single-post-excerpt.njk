{%- set wordCount -%}{{ post.templateContent | striptags | wordcount }}{%- endset -%}
{%- set readingTime -%}{{ wordCount | readingTimeMin }}{%- endset -%}
{%- set postDate -%}{{ post.data.date|readableDate }}{%- endset -%}
<a href="{{ post.url }}">
  <article>
    <header>
      <h2 class="post-title">{{ post.data.title }}</h2>
    </header>
    <div class="excerpt">
      {% excerpt post %}
    </div>
    <div class="post-meta">
        <time>{{ postDate }}</time>
        {% if siteConfig.showPostLength == 'time' %}
        <span class="separator">•</span>
        <span class="reading-time" title="{{ wordCount }} words">{{ readingTime }} min read</span>
        {% elif siteConfig.showPostLength == 'count' %}
        <span class="separator">•</span>
        <span class="reading-time">ca. {{ wordCount|round }} words</span>
        {% endif %}
    </div>
  </article>
</a>
